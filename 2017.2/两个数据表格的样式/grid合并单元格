<script src="js/jquery.js"></script>
<script src="js/angular.js"></script>
<script src="js/ng-grid.js"></script>
<script>
    var myMod = angular.module('myMod', ['ngGrid']);
    //    注入 ngGrid 模块
    myMod.controller('myCtrl',['$scope','$http',function ($scope,$http) {
        $scope.addGrid=function () {
            $('.editGrid').css('display','block')
        };
        $scope.yinc=function () {
            $('.editGrid').css('display','none')
        }
        $http.get('data/tsconfig.json').success(function (data) {
            $scope.users=data.data;
        });
        $scope.pagingOptions={
            pageSizes:[1,10,20],
//            设置下拉空的内容
            pageSize:1,
//            设置下拉框的默认值
            currentPage:1
//            设置当前页的默认值
        };
        $scope.gridOptions={
            data:'users',//要显示的数据，只能是字符串
//            enableRowSelection:false,//不让选中行
//            multiSelect:false,//不可以复选
            enableCellSelection:true,//可以选中单元格
            enableCellEdit:true,//可编辑单元格
//            enablePinning:true,//单元格可固定
            columnDefs:[
                {
                    field:'id',
                    displayName:'菜单ID'
                },
                {
                    field:'name',
                    displayName:'菜单名称'

                },
                {
                    field:'range',
                    displayName:'菜单级别'

                },
                {
                    field:'lastMenu',
                    displayName:'上级菜单'

                },
                {
                    field:'sorts',
                    displayName:'排序号',
                    width:80

                },
                {
                    field:'modelNum',
                    displayName:'模板编号'

                },
                {
                    field:'dis_play',
                    displayName:'是否显示',
                    headerClass:"aaa",
                    resizable:true,

                },
                {
                    field:'id',
                    displayName:'操作',
                    cellTemplate:'<div class="play"><a>详情</a><a href="">修改</a><a href="">菜单配置</a><a href="">配置导入</a></div>',
                    width:400


                }
            ],

//            jqueryUIDraggable: true,
            showFilter:true,
            showGroupPanel:true, //显示一个标题列
            showSelectionCheckbox:true,
            enablePaging:true,
            showFooter:true,
            pagingOptions:$scope.pagingOptions
        }

    }])

</script>

</body>
